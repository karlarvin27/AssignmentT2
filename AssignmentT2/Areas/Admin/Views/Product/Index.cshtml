@model List<Product>
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">Product List</h2>
            </div>
            <div class="col-6" text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                Create New Product <i class="bi bi-plus-square"></i>
            </a>

            </div>
        </div>
    
<table class="table table-borded table-striped">
    <thead>

    
    <tr>
        <th>
            Product/Services Name
        </th>
        <th> Price</th>
        <th>
            Description
        </th>
        <th>

        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td>
            @obj.Services
            </td>
            <td>
            @obj.ListPrice
            </td>
             <td>
             @obj.Description
             </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                    </a>
                     <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-file-x"></i> Delete
                     </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
    </div>