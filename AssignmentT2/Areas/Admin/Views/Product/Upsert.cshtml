@model AssignmentT2.Models.ViewModels.ProductVM

<form method="post" class="row enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.Product.Id!=0?"Update":"Create") Product</h2>
            <hr/>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Services" class="p-0"></label>
            <input asp-for="Product.Services" class="form-control" />
            <span asp-validation-for="Product.Services" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Description" class="p-0"></label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.ListPrice" class="p-0"></label>
            <input asp-for="Product.ListPrice" class="form-control" />
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Price" class="p-0"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Price3" class="p-0"></label>
            <input asp-for="Product.Price3" class="form-control" />
            <span asp-validation-for="Product.Price3" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Price5" class="p-0"></label>
            <input asp-for="Product.Price5" class="form-control" />
            <span asp-validation-for="Product.Price5" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.CategoryId" class="p-0"></label>
            <Select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </Select>
            <input asp-for="Product.CategoryId" class="form-control" hidden />
            <span asp-validation-for="Product.CategoryId" class="text-danger" hidden></span>
        </div>
        <div class="form-floating py-2 col-12">
            <label asp-for="Product.ImageUrl" class="p-0"></label>
                <input type="file" class="form-control border-0 shadow"/>
                 <input asp-for="Product.ImageUrl" class="form-control" hidden />
           
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                @if (Model.Product.Id !=0)
                {
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                }
                else{
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                }
               
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to List
                </a>
            </div>

        </div>

    
        
    </div>
      
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}